{
  "kind": "collectionType",
  "collectionName": "applications",
  "info": {
    "singularName": "application",
    "pluralName": "applications",
    "displayName": "Application"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "appStatus": {
      "type": "enumeration",
      "required": true,
      "default": "submitted",
      "enum": [
        "submitted",
        "accepted",
        "rejected",
        "withdrawn"
      ]
    },
    "coverLetter": {
      "type": "text"
    },
    "attachments": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": [
        "images",
        "files"
      ]
    },
    "job": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::job.job"
    },
    "users_permissions_user": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "plugin::users-permissions.user"
    }
  }
}
